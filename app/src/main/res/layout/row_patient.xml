<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/img_patient"
            android:src="@drawable/patient"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/desc_paciente"
            android:text="Paciente: "
            android:textSize="22sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_toRightOf="@id/img_patient"
            android:layout_toEndOf="@id/img_patient"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/desc_cpf"
            android:text="CPF: "
            android:textSize="18sp"
            android:textColor="#a9a9a9"
            android:layout_toRightOf="@id/img_patient"
            android:layout_toEndOf="@id/img_patient"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/desc_paciente"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/paciente_nome"
            android:text="-------"
            android:textSize="22sp"
            android:textColor="#000"
            android:layout_toRightOf="@id/img_patient"
            android:layout_toEndOf="@id/img_patient"
            android:layout_marginStart="100dp"
            android:layout_alignLeft="@id/desc_paciente"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/paciente_cpf"
            android:text="-------"
            android:textSize="18sp"
            android:textColor="#a9a9a9"
            android:layout_toRightOf="@id/img_patient"
            android:layout_toEndOf="@id/img_patient"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/paciente_nome"
            />
    </RelativeLayout>
</RelativeLayout>